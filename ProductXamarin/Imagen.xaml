<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProductXamarin.Imagen">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Seleccione una imagen de su dispositivo"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Select Image" Clicked="OnSelectImageClicked" Margin="0,0,0,20"/>
            <Label x:Name="selectedImageLabel" Text="" FontSize="Small" HorizontalOptions="Center" Margin="0,0,0,20"/>
            <Image x:Name="selectedImageView" Aspect="AspectFit" HeightRequest="200" Margin="0,0,0,20" />
            <Button Text="Save" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>